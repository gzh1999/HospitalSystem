@section scripts{
    <script>
        $(function () {
            MenberShow();
            Bandla();
        })
        //绑定品牌下拉
        function Bandla() {
            $.ajax({
                url: "http://localhost:65510/api/BrandSetting/Get",
                type: "get",
                dataType: "json",
                success: function (d) {
                    //清空下拉框
                    $("#selectTravelCity").empty();
                    $("#selectTravelCity").append("<option value=0>全部</option>");
                    //拼接一个下拉项
                    $(d).each(function () {
                        var opt = "<option value=" + this.SettingId + ">" + this.SettingGrade + "</option>";
                        //将数据放入表格
                        $("#selectTravelCity").append(opt);
                    });
                    MenberShow(1)
                }
            })
        }
        //会员显示表
        function MenberShow(page) {
            var asd = {};
            asd.SettingGrade = $("#selectTravelCity").val();
            asd.MenberName = $("#name").val();
            asd.MenberCard = $("#name").val();
            asd.MenberPhone = $("#band").val();
            $.ajax({
                url: 'http://localhost:65510/api/Integral/Get',
                type: 'get',
                dataType: 'json',
                data: {
                    name: $("#name").val(), type: $("#type").val(), band: $("#band").val(), pricemin: $("#Pricemin").val(), pricemax: $("#Pricemax").val(), CurrentPage: page
                },
                success: function (d) {
                    $("#TotalCount").text(d.TotalCount)
                    $("#TotalPage").text(d.TotalPage)
                    $("#CurrentPage").text(d.CurrentPage)
                    //最大页
                    TotalPage = d.TotalPage;
                    //当前页
                    CurrentPage = d.CurrentPage;
                    //清空表格
                    $("#td").empty();
                    $(d.menbers).each(function () {
                        var line = '<tr>'
                            + '<td>' + this.MenberId + '</td>'
                            + '<td>' + this.MenberCard + '</td>'
                            + '<td>' + this.SettingGrade + '</td>'
                            + '<td>' + this.MenberType + '</td>'
                            + '<td>' + this.MenberName + '</td>'
                            + '<td>' + this.MenberPhone + '</td>'
                            + '<td>' + this.Integral + '</td>'
                            + '<td>' + "<a data-toggle='modal' data-target='#myModal1' onclick=GetId(" + this.MenberId + ")>积分变动</a>" + '</td>'
                            + '</tr>'
                        $("#td").append(line);
                    })
                }
            })
        }
        var Id = 0
        function GetId(MenberId) {
            Id = MenberId;

        }
        //添加积分
        function IntegralUpt() {
            var s = {
                id: Id,
                tui: $("#textZeng").val()
            }
            $.ajax({
                url: 'http://localhost:65510/api/Change/Putjizeng1/',
                type: 'get',
                data: s,
                dataType: 'json',
                success: function (d) {
                    if (d > 0) {
                        IntegraUpt();
                    }

                }
            })
        }
        function IntegraUpt() {

            $.ajax({
                url: 'http://localhost:65510/api/Change/Putjizeng?id=' + Id,
                type: 'get',

                dataType: 'json',
                success: function (d) {
                    if (d > 0) {

                        alert('积分充值成功');
                        location.href = '/Menber/MenbShow';
                    }
                    else {
                        alert('积分充值失败');
                    }
                }
            })
        }
        //积分扣减
        function IntegralKouUpt() {
            var s = {
                id: Id,
                tui: $("#textKou").val()
            }
            $.ajax({
                url: 'http://localhost:65510/api/Change/PutjiKou1/',
                type: 'get',
                data: s,
                dataType: 'json',
                success: function (d) {
                    if (d > 0) {
                        IntegraKoujianUpt();
                    }

                }
            })
        }
        function IntegraKoujianUpt() {

            $.ajax({
                url: 'http://localhost:65510/api/Change/PutjiKou?id=' + Id,
                type: 'get',

                dataType: 'json',
                success: function (d) {
                    if (d > 0) {

                        alert('积分扣减成功');
                        location.href = '/Menber/MenbShow';
                    }
                    else {
                        alert('积分扣减失败');
                    }
                }
            })
        }
        //积分清零
        function Integraling() {

            $.ajax({
                url: 'http://localhost:65510/api/Change/Putling?id=' + Id,
                type: 'get',

                dataType: 'json',
                success: function (d) {
                    if (d > 0) {

                        alert('积分清零成功');
                        location.href = '/Menber/MenbShow';
                    }
                    else {
                        alert('积分清零失败');
                    }
                }
            })
        }
    </script>

