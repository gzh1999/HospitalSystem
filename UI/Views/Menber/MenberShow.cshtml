@section scripts{
    <script>
        $(function () {
            MenberShow();
            Bandla();
        })
        //绑定品牌下拉
        function Bandla() {
            $.ajax({
                url: "http://localhost:65510/api/BrandSetting/Get",
                type: "get",
                dataType: "json",
                success: function (d) {
                    //清空下拉框
                    $("#selectTravelCity").empty();
                    $("#selectTravelCity").append("<option value=0>全部</option>");
                    //拼接一个下拉项
                    $(d).each(function () {
                        var opt = "<option value=" + this.SettingId + ">" + this.SettingGrade + "</option>";
                        //将数据放入表格
                        $("#selectTravelCity").append(opt);
                    });
                    MenberShow(1)
                }
            })
        }
        //会员显示表
        function MenberShow(page) {
            var asd = {};
            asd.SettingGrade = $("#band").val();
            asd.MenberName = $("#name").val();
            $.ajax({
                url: 'http://localhost:65510/api/Menber/Get',
                type: 'get',
                dataType: 'json',
                data: {
                    name: $("#name").val(), type: $("#type").val(), band: $("#band").val(), pricemin: $("#Pricemin").val(), pricemax: $("#Pricemax").val(), CurrentPage: page
                },
                success: function (d) {
                    $("#TotalCount").text(d.TotalCount)
                    $("#TotalPage").text(d.TotalPage)
                    $("#CurrentPage").text(d.CurrentPage)
                    //最大页
                    TotalPage = d.TotalPage;
                    //当前页
                    CurrentPage = d.CurrentPage;
                    //清空表格
                    $("#td").empty();
                    $(d.menbers).each(function () {
                        var line = '<tr>'
                            + '<td>' + this.MenberId + '</td>'
                            + '<td>' + this.MenberCard + '</td>'
                            + '<td>' + this.SettingGrade + '</td>'
                            + '<td>' + this.MenberType + '</td>'
                            + '<td>' + this.MenberName + '</td>'
                            + '<td>' + this.MenberPhone + '</td>'
                            + '<td>' + this.Cumulative + '</td>'
                            + '<td>' + this.Storage + '</td>'
                            + '<td>' + this.Integral + '</td>'
                            + '<td>' + this.Activate + '</td>'
                            + '<td>' + this.Expiration + '</td>'
                            + '<td>' + "<a onclick=MenberUpt(" + this.MenberId + ")>" + (this.Condition ? "启用" : "禁用") + "</a>" + '</td>'
                            + '<td>' + '<a data-toggle="modal" data-target="#myModal4" onclick=GetId(' + this.MenberId + ')>操作</a>' + '</td>'
                            + '</tr>'
                        $("#td").append(line);
                    })
                }
            })
        }
        var Id = 0
        function GetId(MenberId) {
            Id = MenberId;

        }
        function chengeUpt() {
            var s = {
                id: Id,
                pays: $("#textJINe").val()
            }
            $.ajax({
                url: 'http://localhost:65510/api/Change/Putes/',
                type: 'get',
                data: s,
                dataType: 'json',
                success: function (d) {
                    if (d > 0) {
                        changeUpt();
                        DrawbackUpt();
                    }

                }
            })
        }
        function changeUpt() {

            $.ajax({
                url: 'http://localhost:65510/api/Change/Puts?id=' + Id,
                type: 'get',

                dataType: 'json',
                success: function (d) {
                    if (d > 0) {

                        alert('充值成功'); 
                        

                    }
                    else {
                        alert('充值失败');
                    }
                }
            })
        }
        function chengetui1Upt() {
            var s = {
                id: Id,
                tui: $("#textTui").val()
            }
            $.ajax({
                url: 'http://localhost:65510/api/Change/PutTui1/',
                type: 'get',
